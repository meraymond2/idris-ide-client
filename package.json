{
  "name": "idris-ide-client",
  "version": "0.1.4",
  "description": "A library for talking to the Idris IDE.",
  "keywords": [
    "idris"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meraymond2/idris-ide-client"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc -p .",
    "eslint": "eslint src --ext ts",
    "lint": "tsc --noEmit && prettier --check --write 'src/**/*.ts' && eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "start": "npm run build && node build/index.js",
    "test": "NODE_ENV=test npx mocha --recursive --require ts-node/register --extensions ts 'test/**/*.ts'",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.22",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "chai": "4.2.0",
    "eslint": "7.19.0",
    "mocha": "8.2.1",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}
