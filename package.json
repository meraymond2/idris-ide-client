{
  "name": "idris-ide-client",
  "version": "0.1.5",
  "description": "A library for talking to the Idris IDE.",
  "keywords": [
    "idris"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meraymond2/idris-ide-client"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf build/",
    "eslint": "eslint src --ext ts",
    "lint": "tsc --noEmit && prettier --check --write 'src/**/*.ts' && eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "start": "npm run build && node build/index.js",
    "test": "npm run clean && npx mocha --recursive --require ts-node/register --extensions ts 'test/**/*.ts'",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/chai": "4.2.21",
    "@types/mocha": "8.2.3",
    "@types/node": "14.17.2",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "chai": "4.3.4",
    "eslint": "7.30.0",
    "mocha": "9.0.2",
    "prettier": "2.3.2",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  }
}
