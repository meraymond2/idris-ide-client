{
  "name": "idris-ide-client",
  "version": "0.1.1",
  "description": "A library for talking to the Idris IDE.",
  "keywords": [
    "idris"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meraymond2/idris-ide-client"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc -p .",
    "eslint": "eslint src --ext ts",
    "lint": "tsc --noEmit && prettier --check --write 'src/**/*.ts' && eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "start": "npm run build && node build/index.js",
    "test": "npx mocha --recursive --require ts-node/register --extensions ts 'test/**/*.ts'",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "mocha": "7.1.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "7.0.2",
    "@types/node": "12.12.2",
    "@typescript-eslint/parser": "2.26.0",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "prettier": "2.0.4",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  }
}
